<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_rewatching_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone"
    tools:showIn="@layout/activity_edit_details"
    tools:visibility="visible">

    <TextView
        android:id="@+id/tv_rewatching_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/rewatching"
        android:textColor="?android:textColorSecondary"
        android:textSize="14sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/cb_rewatching"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="@string/rewatching" />

    <LinearLayout
        android:id="@+id/ll_episodes_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_episodes_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="sans-serif-light"
            tools:text="Episodes:" />

        <EditText
            android:id="@+id/et_episodes_field"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="end"
            android:inputType="number"
            android:padding="8dp"
            android:selectAllOnFocus="true"
            android:text="@string/zero"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_series_episodes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            tools:text=" / —" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sub_episodes_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sub_episodes_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="sans-serif-light"
            tools:text="Volumes:" />

        <EditText
            android:id="@+id/et_sub_episodes_field"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="end"
            android:inputType="number"
            android:padding="8dp"
            android:selectAllOnFocus="true"
            android:text="@string/zero"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_series_sub_episodes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            tools:text=" / —" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/tv_rewatching_times_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="sans-serif-light"
            tools:text="@string/totalTimesRewatched" />

        <EditText
            android:id="@+id/et_rewatching_times_input"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tv_rewatching_times_label"
            android:layout_toRightOf="@+id/tv_rewatching_times_label"
            android:fontFamily="sans-serif-light"
            android:gravity="end"
            android:inputType="number"
            android:padding="8dp"
            android:selectAllOnFocus="true"
            android:textColorHint="#bbbbbb"
            android:textSize="16sp"
            tools:text="0" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="@string/rewatchingTip"
        android:textSize="12sp" />
</LinearLayout>